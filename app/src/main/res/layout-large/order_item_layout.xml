<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:padding="40dp"
        >
        <TextView
            android:id="@+id/order_item_user_name"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/order_item_phone"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            />
        <TextView
            android:id="@+id/order_item_total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_below="@+id/order_item_user_name"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/order_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipment Address:"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_below="@+id/order_item_total_amount"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/order_item_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_below="@+id/order_item_address"
            android:gravity="center"
            />
        <Button
            android:id="@+id/order_item_showProducts_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show the Order Products"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="42sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/order_item_date_time"
            android:gravity="center"
            />

    </RelativeLayout>

</RelativeLayout>